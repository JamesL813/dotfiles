	gi='git init' \
	gs='git status' \
	gc='git commit' \
	gcl='git clone' \
	ga='git add' \
	gd='git diff' \
	gb='git branch' \
	gl='git log' \
	gsb='git show-branch' \
	gco='git checkout' \
	gg='git grep' \
	gk='gitk --all' \
	gr='git rebase' \
	gri='git rebase --interactive' \
	gcp='git cherry-pick' \
	grm='git rm' \
	gpush='git push' \
	gpull='git pull' \
	push='git push' \
	pull='git pull'


# lf
alias lf='lfcd'


# Common variations of 'ls' command
alias \
	ls="exa" \
	ll="ls -l" \
	la="ls -a" \
	lla="ls -la" \
	l="ls" \
	s="ls" \
	tree="ls -T"


#For when you've spent too much time in DOS
alias  cls="clear"


# dictionary
