#!/bin/sh


# Basic flags
alias \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -vI" \
	dust="dust -r" \
	exa="exa -xG --icons --group-directories-first" \
	mkdir="mkdir -pv" \
	mkd="mkdir" \
	ln="ln -i" \
	df='df -h'  \
	fd="fd -H"


# Colorize commands when possible.
export GREP_OPTIONS='--color=auto'

alias \
	diff="diff --color=auto" \
	ccat="highlight --out-format=ansi" \
    ip="ip -c"
	#ls="ls -hN --color=auto --group-directories-first" \


# shortened commands
alias \
	ka="killall" \
	g="git" \
	e="$EDITOR" \
	v="$EDITOR" \
	nv="nvim" \
    f="joshuto"\
	p="pacman" \
	py="python" \
	scim="sc-im" \
	sc="sc-im" \
	yay="paru" \
	ffetch="fastfetch" \
	hx="helix"


# Git related
